{
  "modulePaths": [
    "<rootDir>/",
    "<rootDir>/src"
  ],
  "testRegex": "test.js$|test.ts$",
  "transformIgnorePatterns": [
    "/node_modules/"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 5,
      "functions": 5,
      "lines": 5,
      "statements": 5
    }
  },
  "preset": "ts-jest",
  "moduleDirectories": [
    "./src",
    "node_modules"
  ],
  "bail": true
}
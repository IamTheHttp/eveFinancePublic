{
  "compilerOptions": {
    "outDir": "./TS_OUTPUT",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "Node",
    "esModuleInterop" : true,
    "downlevelIteration" : true,
    "baseUrl": "./src/",
    "rootDir": "./src"
  },
  "include": [
    "./src/",
    "./__tests__"
  ],
  "exclude": [
    "./src/.dll/**/*",
    "node_modules"
  ]
}